<form id="app-form" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" value="<%= application.title %>" class="form-control" id="title" placeholder="app title">
        <small id="" class="form-text text-muted">should be unique...</small>
    </div>

    <div class="form-group">
        <label for="short_description">Short Description</label>
        <input value="<%= application.short_description %>" type="text" class="form-control" id="short_description" placeholder="shrot description">
    </div>

    <div class="form-group">
        <label for="description"> Description</label>
        <input value="<%= application.description %>" type="text" class="form-control" id="description" placeholder="description">
    </div>

    <div class="form-group">
        <label for="package_id"> Package id</label>
        <input value="<%= application.package_id %>" type="text" class="form-control" id="package_id" placeholder="package d">
    </div>

    <div class="form-group">
        <label for="url">Url/Website</label>
        <input value="<%= application.url %>" type="text" class="form-control" id="url" placeholder="url">
        <small id="emailHelp" class="form-text text-muted">Website url or application...</small>
    </div>

    <div class="form-group">
        <label for="playstore_url">Playstore Url</label>
        <input value="<%= application.playstore_url %>" type="text" class="form-control" id="playstore_url" placeholder="playstore url">
    </div>

    <div class="form-group form-check">
        <input checked="<%= application.status %>" name="status" value="1" type="checkbox" class="form-check-input" id="status">
        <label class="form-check-label" for="exampleCheck1">Status(Active)</label>
    </div>

    <div class="form-group form-check">
        <input checked="<%= application.special %>" name="special" value="1" type="checkbox" class="form-check-input" id="special">
        <label class="form-check-label" for="exampleCheck1">Special</label>
    </div>

    <div class="form-group form-check">
        <input checked="<%= application.featured %>" name="featured" value="1" type="checkbox" class="form-check-input" id="featured">
        <label class="form-check-label" for="exampleCheck1">Featured</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>